<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivestockManagementSystem.Views.DeletePage"
             xmlns:vm="clr-namespace:LivestockManagementSystem.ViewModels"
             Title="Delete Livestock">
    <ContentPage.BindingContext>
        <vm:DeleteViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25"
                             HorizontalOptions="Center"
                             WidthRequest="700">

            <!-- 🔴 Page Header -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Ellipse Fill="#F44336" WidthRequest="25" HeightRequest="25" VerticalOptions="Center"/>
                <Label Text="Delete Livestock Record"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#D32F2F"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- ✅ Status Message -->
            <Frame BackgroundColor="{Binding StatusColor}"
                   BorderColor="#B71C1C"
                   CornerRadius="10"
                   Padding="15"
                   IsVisible="{Binding HasMessage}"
                   x:DataType="vm:DeleteViewModel">
                <Label Text="{Binding StatusMessage}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"/>
            </Frame>

            <!-- 🧾 Delete Form -->
            <Frame BorderColor="#F44336"
                   BackgroundColor="#FFEBEE"
                   CornerRadius="12"
                   Padding="25">

                <Grid ColumnSpacing="15"
                      ColumnDefinitions="150,*">

                    <Label Grid.Column="0"
                           Text="Record ID:"
                           VerticalOptions="Center"
                           TextColor="#1B1B1B"
                           FontAttributes="Bold"/>

                    <Entry Grid.Column="1"
                           Placeholder="Enter ID to delete"
                           PlaceholderColor="#757575"
                           Text="{Binding RecordId}"
                           Keyboard="Numeric"
                           TextColor="#1B1B1B"
                           BackgroundColor="White"/>
                </Grid>
            </Frame>

            <!-- 🗑️ Delete Button -->
            <Button Text="🗑️ Delete Record"
                    Command="{Binding DeleteCommand}"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="45"
                    WidthRequest="250"
                    HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>