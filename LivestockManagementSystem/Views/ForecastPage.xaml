<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivestockManagementSystem.Views.ForecastPage"
             xmlns:vm="clr-namespace:LivestockManagementSystem.ViewModels"
             Title="Profit Forecast">

    <ContentPage.BindingContext>
        <vm:ForecastViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15"
                             HorizontalOptions="Center"
                             WidthRequest="850">

            <!-- Header -->
            <Label Text="ðŸ’¹ Profit Forecast Calculator"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#1E4620"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <!-- Type Picker -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Livestock Type:" VerticalOptions="Center" FontAttributes="Bold"/>
                <Picker Title="Select Type"
                        ItemsSource="{Binding LivestockTypes}"
                        SelectedItem="{Binding SelectedType}"
                        WidthRequest="200"/>
            </HorizontalStackLayout>

            <!-- Quantity Entry -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Quantity:" VerticalOptions="Center" FontAttributes="Bold"/>
                <Entry Placeholder="Enter quantity"
                       Keyboard="Numeric"
                       Text="{Binding Quantity}"
                       WidthRequest="200"/>
            </HorizontalStackLayout>

            <!-- Forecast Button -->
            <Button Text="ðŸ“ˆ Calculate Forecast"
                    Command="{Binding CalculateCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    WidthRequest="350"
                    HorizontalOptions="Center"/>

            <!-- Result Display -->
            <Border Stroke="#2E7D32"
                    Background="#E8F5E9"
                    Padding="20"
                    StrokeThickness="1"
                    Margin="0,20,0,0"
                    IsVisible="{Binding HasResult}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Radius="5" Opacity="0.4" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ’° Forecast Result"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#2E7D32"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding ForecastResult}"
                           FontSize="18"
                           TextColor="#1B1B1B"
                           HorizontalOptions="Center"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
