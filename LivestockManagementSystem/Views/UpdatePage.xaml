<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivestockManagementSystem.Views.UpdatePage"
             xmlns:vm="clr-namespace:LivestockManagementSystem.ViewModels"
             Title="Update Livestock">
    <ContentPage.BindingContext>
        <vm:UpdateViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25"
                             HorizontalOptions="Center"
                             WidthRequest="750">

            <!-- ðŸŸ¡ Page Header -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Ellipse Fill="#FFC107" WidthRequest="25" HeightRequest="25" VerticalOptions="Center"/>
                <Label Text="Update Existing Livestock"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#FFA000"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- âœ… Status Message -->
            <Frame BackgroundColor="{Binding StatusColor}"
                   BorderColor="#616161"
                   CornerRadius="10"
                   Padding="15"
                   IsVisible="{Binding HasMessage}">
                <Label Text="{Binding StatusMessage}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"/>
            </Frame>

            <!-- ðŸ§¾ Input Form -->
            <Frame BorderColor="#FFC107"
                   BackgroundColor="#FFF8E1"
                   CornerRadius="12"
                   Padding="25">

                <Grid RowSpacing="15" ColumnSpacing="15"
                      ColumnDefinitions="150,*"
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">

                    <Label Grid.Row="0" Grid.Column="0" Text="Record ID:"
                           VerticalOptions="Center" TextColor="#1B1B1B" FontAttributes="Bold"/>
                    <Entry Grid.Row="0" Grid.Column="1"
                           Placeholder="Enter ID to load"
                           PlaceholderColor="#757575"
                           Text="{Binding RecordId}"
                           Keyboard="Numeric"
                           TextColor="#1B1B1B"
                           BackgroundColor="White"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Type:"
                           VerticalOptions="Center" TextColor="#1B1B1B" FontAttributes="Bold"/>
                    <Picker Grid.Row="1" Grid.Column="1"
                            ItemsSource="{Binding Types}"
                            SelectedItem="{Binding SelectedType}"
                            TextColor="#1B1B1B"
                            BackgroundColor="White"/>

                    <Label Grid.Row="2" Grid.Column="0" Text="Expense ($):"
                           VerticalOptions="Center" TextColor="#1B1B1B" FontAttributes="Bold"/>
                    <Entry Grid.Row="2" Grid.Column="1"
                           Text="{Binding Expense}"
                           Keyboard="Numeric"
                           TextColor="#1B1B1B"
                           BackgroundColor="White"/>

                    <Label Grid.Row="3" Grid.Column="0" Text="Weight (kg):"
                           VerticalOptions="Center" TextColor="#1B1B1B" FontAttributes="Bold"/>
                    <Entry Grid.Row="3" Grid.Column="1"
                           Text="{Binding Weight}"
                           Keyboard="Numeric"
                           TextColor="#1B1B1B"
                           BackgroundColor="White"/>

                    <Label Grid.Row="4" Grid.Column="0" Text="Colour:"
                           VerticalOptions="Center" TextColor="#1B1B1B" FontAttributes="Bold"/>
                    <Entry Grid.Row="4" Grid.Column="1"
                           Text="{Binding Colour}"
                           Placeholder="e.g. Red"
                           PlaceholderColor="#757575"
                           TextColor="#1B1B1B"
                           BackgroundColor="White"/>

                    <Label Grid.Row="5" Grid.Column="0" Text="Produce (kg):"
                           VerticalOptions="Center" TextColor="#1B1B1B" FontAttributes="Bold"/>
                    <Entry Grid.Row="5" Grid.Column="1"
                           Text="{Binding ProduceAmount}"
                           Keyboard="Numeric"
                           TextColor="#1B1B1B"
                           BackgroundColor="White"/>
                </Grid>
            </Frame>

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Button Text="ðŸ“¥ Load"
                        Command="{Binding LoadCommand}"
                        BackgroundColor="#03A9F4"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        WidthRequest="150"/>
                <Button Text="ðŸ’¾ Save Changes"
                        Command="{Binding UpdateCommand}"
                        BackgroundColor="#FFC107"
                        TextColor="Black"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        WidthRequest="180"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>