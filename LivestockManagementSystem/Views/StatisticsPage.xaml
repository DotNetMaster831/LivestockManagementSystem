<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivestockManagementSystem.Views.StatisticsPage"
             xmlns:vm="clr-namespace:LivestockManagementSystem.ViewModels"
             Title="Farm Statistics">

    <ContentPage.BindingContext>
        <vm:StatisticsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15"
                             HorizontalOptions="Center"
                             WidthRequest="850">

            <!-- Page Title -->
            <Label Text="ðŸ“ˆ Farm Statistics Dashboard"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#1E4620"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <!-- Refresh Button -->
            <Button Text="ðŸ”„ Refresh Statistics"
                    Command="{Binding RefreshStatsCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    WidthRequest="350"
                    HorizontalOptions="Center"/>

            <!-- Financial Summary -->
            <Border Stroke="#2E7D32"
                    Background="#E8F5E9"
                    StrokeThickness="1"
                    Padding="20"
                    Margin="0,20,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Radius="6" Opacity="0.35" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ’° Financial Summary"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#2E7D32" />
                    <Label Text="{Binding DailyProfitText}"
                           FontSize="16" TextColor="#1B1B1B" />
                    <Label Text="{Binding Tax30DayText}"
                           FontSize="16" TextColor="#1B1B1B" />
                    <Label Text="{Binding AvgProfitText}"
                           FontSize="16" TextColor="#1B1B1B" />
                    <Label Text="{Binding CowProfitText}"
                           FontSize="16" TextColor="#1B1B1B" />
                    <Label Text="{Binding SheepProfitText}"
                           FontSize="16" TextColor="#1B1B1B" />
                    <Label Text="{Binding MoreProfitableText}"
                           FontSize="16" FontAttributes="Bold"
                           TextColor="#004D40" />
                </VerticalStackLayout>
            </Border>

            <!-- Weight Stats -->
            <Border Stroke="#1E88E5"
                    Background="#E3F2FD"
                    StrokeThickness="1"
                    Padding="20"
                    Margin="0,10,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Radius="6" Opacity="0.35" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="10">
                    <Label Text="âš–ï¸ Weight Statistics"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#1565C0" />
                    <Label Text="{Binding AvgWeightText}"
                           FontSize="16"
                           TextColor="#1B1B1B" />
                    <Label Text="{Binding TotalAnimalsText}"
                           FontSize="16"
                           TextColor="#1B1B1B" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
