<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivestockManagementSystem.Views.StatisticsPage"
             xmlns:vm="clr-namespace:LivestockManagementSystem.ViewModels"
             Title="Farm Statistics">
    <ContentPage.BindingContext>
        <vm:StatisticsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15"
                             HorizontalOptions="Center"
                             WidthRequest="850">

            <!-- Page Title -->
            <Label Text="ðŸ“ˆ Farm Statistics Dashboard"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#1E4620"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <!-- Refresh Button -->
            <Button Text="ðŸ”„ Refresh Statistics"
                    Command="{Binding RefreshStatsCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    WidthRequest="350"
                    HorizontalOptions="Center"/>

            <!-- Results Frame -->
            <Frame CornerRadius="10"
                   BorderColor="#2E7D32"
                   BackgroundColor="#E8F5E9"
                   HasShadow="True"
                   Padding="20"
                   Margin="0,20,0,0">

                <VerticalStackLayout Spacing="10">

                    <Label Text="ðŸ’° Financial Summary"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#2E7D32" />

                    <Label Text="{Binding DailyProfitText}"
                           FontSize="16" TextColor="#1B1B1B" />
                    <Label Text="{Binding Tax30DayText}"
                           FontSize="16" TextColor="#1B1B1B" />
                    <Label Text="{Binding AvgProfitText}"
                           FontSize="16" TextColor="#1B1B1B" />
                    <Label Text="{Binding CowProfitText}"
                           FontSize="16" TextColor="#1B1B1B" />
                    <Label Text="{Binding SheepProfitText}"
                           FontSize="16" TextColor="#1B1B1B" />
                    <Label Text="{Binding MoreProfitableText}"
                           FontSize="16" FontAttributes="Bold" TextColor="#004D40" />
                </VerticalStackLayout>
            </Frame>

            <!-- Weight Stats -->
            <Frame CornerRadius="10"
                   BorderColor="#1E88E5"
                   BackgroundColor="#E3F2FD"
                   HasShadow="True"
                   Padding="20"
                   Margin="0,10,0,0">

                <VerticalStackLayout Spacing="10">
                    <Label Text="âš–ï¸ Weight Statistics"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#1565C0" />

                    <Label Text="{Binding AvgWeightText}"
                           FontSize="16"
                           TextColor="#1B1B1B" />
                    <Label Text="{Binding TotalAnimalsText}"
                           FontSize="16"
                           TextColor="#1B1B1B" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>